{
	"name": "boosty-emotes",
	"version": "0.0.4",
	"description": "An extension that allows you to use Twitch emotes on Boosty, including third-party providers: 7TV, FrankerFaceZ, and BetterTTV.",
	"type": "module",
	"author": "Stimul Cross",
	"license": "MIT",
	"private": true,
	"scripts": {
		"start": "cross-env NODE_ENV=development webpack --config webpack.config.cjs --mode development",
		"build": "cross-env NODE_ENV=production webpack --config webpack.config.cjs --mode production",
		"lint": "eslint --ext js,ts src && stylelint \"src/**/*.{css,scss,sass}\"",
		"format": "prettier -w . --embedded-language-formatting=auto"
	},
	"devDependencies": {
		"@babel/core": "^7.24.3",
		"@babel/preset-env": "^7.24.3",
		"@babel/preset-typescript": "^7.24.1",
		"@namics/stylelint-bem": "^10.0.0",
		"@stimulcross/eslint-config-typescript": "^1.6.2",
		"@stimulcross/prettier-config": "^1.6.2",
		"@types/webextension-polyfill": "^0.10.7",
		"babel-loader": "^9.1.3",
		"clean-webpack-plugin": "^4.0.0",
		"copy-webpack-plugin": "^12.0.2",
		"cross-env": "^7.0.3",
		"css-loader": "^7.1.2",
		"dotenv": "^16.4.5",
		"eslint": "^8.57.0",
		"file-loader": "^6.2.0",
		"json-loader": "^0.5.7",
		"mini-css-extract-plugin": "^2.9.0",
		"prettier": "^3.3.3",
		"prettier-plugin-css-order": "^2.1.2",
		"prettier-plugin-embed": "^0.4.15",
		"sass": "^1.77.8",
		"sass-loader": "^14.2.1",
		"stylelint": "^16.8.0",
		"stylelint-config-standard-scss": "^13.1.0",
		"stylelint-order": "^6.0.4",
		"stylelint-selector-bem-pattern": "^4.0.0",
		"terser-webpack-plugin": "^5.3.10",
		"transform-json-webpack-plugin": "^0.0.2",
		"ts-loader": "^9.5.1",
		"typescript": "^5.4.3",
		"webextension-polyfill": "^0.12.0",
		"webpack": "^5.91.0",
		"webpack-cli": "^5.1.4",
		"webpack-dev-server": "^5.0.4"
	},
	"dependencies": {
		"@floating-ui/dom": "^1.6.10",
		"@stimulcross/logger": "^7.0.0",
		"code-tag": "^1.2.0"
	}
}
